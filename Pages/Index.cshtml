@page
@model IndexModel

@foreach (var item in Model.Summary)
{
<div class="docs-section">
    @{ 
        var year = item.ReleaseDate.Year;
        var month = item.ReleaseDate.Month;
        var day = item.ReleaseDate.Day;
        var titleUrl = item.TitleURL;
    }
    <a href="@year/@month/@day/@titleUrl" class="summary-section">
        <h4 class="docs-header">@Html.DisplayFor(modelItem => item.Title)</h4>
        <div class="row">@Html.DisplayFor(modelItem => item.ReleaseDate)</div>
        <p>@Html.DisplayFor(modelItem => item.Content)</p>
    </a>
</div>
}

<div class="row">
    @{
        if (Model.CurrentPage != 1)
        {
            <div class="two columns">
                <div class="next-page">
                    <a asp-page="" asp-route-p=@(Model.CurrentPage-1)>上一页</a>
                </div>
            </div>

        }
        if (!Model.IsLastPage)
        {
            <div class="two columns">
                <div class="prev-page">
                    <a asp-page="" asp-route-p=@(Model.CurrentPage+1)>下一页</a>
                </div>
            </div>
        }
    }
</div>
