@page
@model IndexModel
@{
    //ViewData["Title"] = "Home page";
}
@foreach (var item in Model.Summary)
{
<div class="docs-section">
    <h4 class="docs-header">@Html.DisplayFor(modelItem => item.Title)</h4>
    <div class="row">@Html.DisplayFor(modelItem => item.ReleaseDate)</div>
    <p>@Html.DisplayFor(modelItem => item.Content)</p>
</div>
}

<div class="row">
    @{
        if (Model.CurrentPage != 1)
        {
            <div class="next-page">
                <a asp-page="" asp-route-p=@(Model.CurrentPage-1)>上一页</a>
            </div>
        }
        if (!Model.IsLastPage)
        {
            <div class="prev-page">
                <a asp-page="" asp-route-p=@(Model.CurrentPage+1)>下一页</a>
            </div>
        }
    }
</div>
